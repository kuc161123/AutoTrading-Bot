# ================================================
# RAILWAY ENVIRONMENT VARIABLES TEMPLATE
# ================================================

# === CRITICAL - Bot won't work without these ===

# Bybit API Configuration (MAINNET)
BYBIT_API_KEY=your_mainnet_api_key_here
BYBIT_API_SECRET=your_mainnet_api_secret_here
BYBIT_TESTNET=false

# Risk Management (REQUIRED)
RISK_PER_TRADE=0.005
MAX_POSITIONS=10
LEVERAGE=10

# === IMPORTANT - For generating trades ===

# Strategy Selection (use 'aggressive' for more signals)
STRATEGY_TYPE=aggressive

# Signal Requirements (lower = more signals)
MIN_CONFIRMATIONS=1
MIN_RISK_REWARD=1.0

# === TRADING PARAMETERS ===

# Risk/Reward Multipliers
RR_SL_MULTIPLIER=1.5
RR_TP_MULTIPLIER=3.0
SCALP_RR_SL_MULTIPLIER=1.0
SCALP_RR_TP_MULTIPLIER=2.0

# Scalping Settings
SCALP_LEVERAGE=5
SWING_LEVERAGE=10
SCALP_TIMEFRAME=5
SCALP_PROFIT_TARGET=0.003
SCALP_STOP_LOSS=0.002

# === SYSTEM SETTINGS ===

# Scanning
SCAN_INTERVAL=30
MIN_VOLUME_24H=1000000
STARTUP_DELAY=5

# Strategy Tuning
RSI_PERIOD=14
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Logging
LOG_LEVEL=INFO

# === OPTIONAL ===

# Telegram Notifications
TELEGRAM_BOT_TOKEN=optional_telegram_bot_token
TELEGRAM_CHAT_IDS=[]