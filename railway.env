# ================================================
# RAILWAY ENVIRONMENT VARIABLES TEMPLATE
# ================================================

# === CRITICAL - Bot won't work without these ===

# Bybit API Configuration (MAINNET)
BYBIT_API_KEY=your_mainnet_api_key_here
BYBIT_API_SECRET=your_mainnet_api_secret_here
BYBIT_TESTNET=false

# Risk Management (REQUIRED - Control these in Railway)
RISK_PER_TRADE=0.005     # Risk 0.5% of balance per trade (0.001-1.0)
MAX_POSITIONS=10         # Maximum concurrent positions (1-200)
LEVERAGE=10              # Default leverage for trades (1-125)
MAX_POSITION_VALUE_MULTIPLIER=1.0  # Max position value as multiple of balance (0.5-5.0)

# === ALL REQUIRED - No defaults, you control everything ===

# Signal Quality Control - HARDCODED IN CONFIG (no need to set)

# Signal Requirements (lower = more signals)
MIN_CONFIRMATIONS=1
MIN_RISK_REWARD=1.0

# === TRADING PARAMETERS ===

# Risk/Reward Multipliers
RR_SL_MULTIPLIER=1.5
RR_TP_MULTIPLIER=3.0
SCALP_RR_SL_MULTIPLIER=1.0
SCALP_RR_TP_MULTIPLIER=2.0

# Leverage Settings (Different for scalps vs swings)
SCALP_LEVERAGE=5         # Leverage for scalp trades (1-125)
SWING_LEVERAGE=10        # Leverage for swing trades (1-125)
SCALP_TIMEFRAME=5
SCALP_PROFIT_TARGET=0.003
SCALP_STOP_LOSS=0.002

# === ALL REQUIRED SYSTEM SETTINGS ===

# Scanning (increased to prevent rate limiting)
SCAN_INTERVAL=60
MIN_VOLUME_24H=1000000
STARTUP_DELAY=5

# Strategy Tuning
RSI_PERIOD=14
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Logging
LOG_LEVEL=INFO

# === OPTIONAL ===

# Telegram Notifications
TELEGRAM_BOT_TOKEN=optional_telegram_bot_token
TELEGRAM_CHAT_IDS=[]