# === API CREDENTIALS (REQUIRED) ===
BYBIT_API_KEY=your_mainnet_api_key_here
BYBIT_API_SECRET=your_mainnet_api_secret_here
BYBIT_TESTNET=false

# === RISK MANAGEMENT (REQUIRED) ===
# Control your risk exposure
RISK_PER_TRADE=0.005              # Risk per trade (0.001=0.1%, 0.005=0.5%, 0.01=1%)
MAX_POSITIONS=10                  # Maximum concurrent positions (1-200)
LEVERAGE=10                       # Trading leverage (1-125)
MAX_POSITION_VALUE_MULTIPLIER=1.0 # Max position value as multiple of balance (0.5-5.0)

# === OPTIONAL NOTIFICATIONS ===
# Leave empty if not using Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_IDS=[]

