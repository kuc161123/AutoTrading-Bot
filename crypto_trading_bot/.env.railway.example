# Railway Environment Variables
# Add these in Railway Dashboard > Variables

# Required for Railway
PORT=8000

# Database (Use Railway's PostgreSQL)
DATABASE_URL=${{DATABASE_URL}}  # Railway provides this automatically

# Redis (Use Railway's Redis)
REDIS_URL=${{REDIS_URL}}  # Railway provides this automatically

# Bybit API
BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret
BYBIT_TESTNET=true

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ALLOWED_CHAT_IDS=your_chat_id
TELEGRAM_SECRET_TOKEN=generate_random_token

# Trading Settings
DEFAULT_RISK_PERCENT=1.0
MAX_CONCURRENT_POSITIONS=5
MAX_DAILY_LOSS_PERCENT=5.0
DEFAULT_LEVERAGE=3
DEFAULT_MARGIN_MODE=isolated

# Strategy Settings
SD_MIN_BASE_CANDLES=3
SD_MAX_BASE_CANDLES=10
SD_DEPARTURE_ATR_MULTIPLIER=2.0
SD_ZONE_BUFFER_PERCENT=0.2
SD_MAX_ZONE_TOUCHES=3
SD_ZONE_MAX_AGE_HOURS=168
SD_MIN_ZONE_SCORE=60.0

# Risk Management
TP1_RISK_RATIO=1.0
TP2_RISK_RATIO=2.0
PARTIAL_TP1_PERCENT=50.0
MOVE_STOP_TO_BREAKEVEN_AT_TP1=true
USE_TRAILING_STOP=true
TRAILING_STOP_ACTIVATION_PERCENT=1.0
TRAILING_STOP_CALLBACK_PERCENT=0.5

# Server
SERVER_HOST=0.0.0.0
ENVIRONMENT=production
LOG_LEVEL=INFO

# Security
SECRET_KEY=generate_with_openssl_rand_hex_32
ENABLE_DEMO_MODE=true

# Rate Limits
BYBIT_REST_RATE_LIMIT=120
SYMBOL_SCAN_INTERVAL_SECONDS=5
INSTRUMENT_REFRESH_INTERVAL_HOURS=24