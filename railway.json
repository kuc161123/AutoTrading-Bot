{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": [
    {
      "name": "trading-bot",
      "variables": {
        "REDIS_URL": "${{Redis.REDIS_URL}}",
        "DATABASE_URL": "${{Postgres.DATABASE_URL}}"
      }
    }
  ]
}